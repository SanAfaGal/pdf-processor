# PDF Processor Configuration
# Copy this file to .env and fill in your values

# File Paths (Windows and Linux/macOS compatible)
SOURCE_PATH=./data/source
STAGING_PATH=./data/staging
FINAL_PATH=./data/final
REPORT_PATH=./data/reports/Informe_Sihos.xlsx

# Document Suffix and Default NIT
DOCUMENT_SUFFIX=HSL
NIT_DEFAULT=890701078

# Processing Configuration
MAX_WORKERS=4
OCR_TIMEOUT=300
COMPRESS_QUALITY=85
DRY_RUN=false

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=./logs/pdf-processor.log

# External Tools Paths (leave empty for system PATH)
GHOSTSCRIPT_PATH=
OCRMYPDF_PATH=
